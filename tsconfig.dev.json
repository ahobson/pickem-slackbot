{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["es2017"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": ".build",
    "baseUrl": "."
  },
  "exclude": ["node_modules", ".build"],
  "include": [
    "src/**/*",
  ]
}
